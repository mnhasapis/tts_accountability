<h1>Goals Index Page</h1>
<h3>I do believe that this is the <strong>All Goals / Completed Goals Page</strong></h3>


  <div class="row">
    <% @goals.each do |x| %>
    <div class="col-md-4">
      <div class="panel panel-default">
  <div class="panel-heading">
    
    <h3 class="panel-title"><%= image_tag x.user.avatar.url(:thumb)%><%= x.user.username %> </h3>
   
  </div>
  <div class="panel-body">
       
        <%= x.description %>
    </div>
        <%= link_to 'Show', @goals %>
        <% if current_user.id == x.user.id %>
        <div class="panel-footer">
        <%= link_to 'Edit', edit_goal_path(x),
        class: "btn btn-primary" %>
        <%= link_to 'Delete', x, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
      </div>
      <% end %>
       
      </div>
  </div>
    <% end %>
  
 </div>


